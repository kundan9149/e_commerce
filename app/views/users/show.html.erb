<h1 id= "community" class="display-1  m-5 tr text-center"> <%=(@user.first_name + ' ' + @user.last_name).capitalize()%>'s Furnico Account</h1>

<div class="card mt-5">
  <div id="user_profile" class="container mt-5 mb-5">
    <div class="main-body">
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card ">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                <div class="mt-3">
                  <h4><%= (@user.first_name + ' ' + @user.last_name).capitalize() %></h4><hr>
                  <% if logged_in? && (@user == current_user || current_user.admin?) %>
                    <%=link_to "Delete Your Profile", user_path(@user),class: "btn btn-danger", method: :delete , data: {confirm: "Are you sure you want to delete #{(@user.first_name + ' ' + @user.last_name).capitalize()}'s Furnico Account?" }%>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">First Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= (@user.first_name).capitalize() %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Last Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= (@user.last_name).capitalize() %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  <%= @user.email %>
                </div>
              </div>
              <hr>
              <div class="row mt-5 mb-4">
                <div class="col-sm-12">
                  <% if logged_in? && (@user == current_user || current_user.admin?) %>
                    <%= link_to "Edit Details",edit_user_path(@user),class: "btn btn-info"%>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <hr><hr>
      <div id="shopping cart">
        <%= render 'shopping_cart' if logged_in? && (@user== current_user || current_user.admin?)%>
      </div>
    </div> 
</div>
</div>
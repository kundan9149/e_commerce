<h1 class="display-1 color: black text-center mt-5" > Features Furniture </h1>

<div class="flickr_pagination">
  <%= will_paginate @features, :container=> false %>
</div>

<% @features.each do |feature|%>
  <div class="card mt-5 mb-5">
    <%= image_tag(feature.ImageName, :class => "mx-auto img-circle mt-3 mb-3 ")%>
    <div class="card-body">
      <h5 class="card-title"><%= feature.ProductName%></h5>
      <p class="card-text"><%= feature.ProductDescription%></p>
      <p class="card-text">â‚¹- <%= feature.ProductPrice%></p>
    </div>
    <div class="text-white text-center mb-5">
      <%= form_with(url:products_show_arrivals_path , method: "post",local: true) do |f| %>
        <%= f.button "Add to Cart" ,class: "btn btn-success w-25", name:"product_id",value: feature.id %>
      <%end%>
    </div>
    <div class="card-footer">
      <small class="text-muted">Last updated <%= time_ago_in_words(feature.updated_at)%> ago .</small>
    </div>
  </div>
<% end %>
<div class="text-white text-center">
  <%= link_to "New Arrivals Furniture", products_show_arrivals_path, class: "btn btn-primary btn-lg"%>
</div>
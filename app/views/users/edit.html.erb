<h1 id= "community" class="display-1  m-5 tr text-center"> Welcome to Edit <%=(@user.first_name + ' ' + @user.last_name).capitalize()%>'s Furnico Account </h1>

<% if @user.errors.any? %>
  
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h2 class="alert-heading"> Please resolve the following errors</h2>
    <ul class="mb-5">
      <% @user.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <%end%>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= form_with(model:@user,  local: true) do |f| %>
  <div class="container-fluid justify-content-center">
    <div class="card card0 border-2 mx-auto mt-10">
      <div class="row d-flex ">
        <div class="col-lg-6">
          <div class="card1 bg-light pb-5">
            <div class="row px-3 justify-content-center mt-4 mb-5"> <img src="https://i.imgur.com/ucirQQf.png" class="image"> </div>
            <div class="row px-3 text-center justify-content-center">
              <h4>Furnico | Your Personal Furniture Destination.</h4>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card2 card border-0 px-4 py-5">
            <h3 class="mb-1">Edit Your Furnico account.</h3>
            <div class="row px-3">
              <div class="line"></div>
              <div class="line"></div>
            </div>
            <div class="row mt-3">
              <div class="col-md-6">
                <label class="mb-0">
                  <h6 class="mb-0 text-sm">First Name</h6>
                </label>
                <%= f.text_field :first_name %>
              </div>
              <div class="col-md-6">
                <label class="mb-0">
                  <h6 class="mb-0 text-sm">Last Name</h6> 
                </label>
                <%= f.text_field :last_name %>
              </div>
            </div>
            <div class="row px-3">
              <label class="mb-0">
                <h6 class="mb-0 text-sm">Email Address</h6>
              </label>
              <%= f.email_field :email %>
            </div>
            <div class="row px-3">
              <label class="mb-0">
                <h6 class="mb-0 text-sm">Password</h6>
              </label>
              <%= f.password_field :password %>
            </div>
            <div class="row mb-4 justify-content-center">
              <div class="col-md-5"> 
                <%= f.submit "Update Account",class:"btn btn-blue text-center mb-1", data: { confirm: "Are you sure?" } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>